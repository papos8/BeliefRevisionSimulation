<Agent>
    size: 20, 20
    canvas:
        Ellipse:
            pos: self.pos
            size: self. size

<Ball>:
    size: 5, 5
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Field>
    ball: ball
    agent: agent

    canvas:
        #Left line
        Rectangle:
            pos: 0, 0
            size: 5, self.height
    
        #Right line
        Rectangle:
            pos: 0, root.right
            size: 5, self.height
    
        #Bottom line
        Rectangle:
            pos: self.x, 0
            size: self.width, 5
        

    Ball:
        id: ball
        center: self.parent.center
    
    Agent:
        id: agent
        center: self.parent.center